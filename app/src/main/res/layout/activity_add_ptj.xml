<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_ptj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.salarycalc.AddPTJActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="89dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="360dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/txtJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_place"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="31dp" />

        <EditText
            android:id="@+id/txt_jobname"
            android:layout_width="515dp"
            android:layout_height="42dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="14dp" />

        <TextView
            android:id="@+id/txtSalary"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:text="@string/text_salary"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="112dp" />

        <EditText
            android:id="@+id/txt_salary"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            tools:layout_editor_absoluteX="128dp"
            tools:layout_editor_absoluteY="76dp" />

        <Button
            android:id="@+id/button_entry"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:onClick="dataInput"
            android:text="@string/text_clear"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="219dp" />

        <Button
            android:id="@+id/btCheck"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:onClick="showData"
            android:text="現在の登録内容を確認する" />

        <Button
            android:id="@+id/btReset"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:onClick="dataReset"
            android:text="登録をすべて削除する" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
