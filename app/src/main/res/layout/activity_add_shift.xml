<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_shift"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008b8b"
    tools:context="com.example.salarycalc.AddShiftActivity"
    tools:layout_editor_absoluteY="89dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/lblName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/frame_style"
        android:paddingBottom="8dp"
        android:paddingLeft="13dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:text="@string/text_name"
        android:textSize="9pt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/lblDate"
        app:layout_constraintRight_toRightOf="@+id/lblDate"
        app:layout_constraintTop_toBottomOf="@+id/lblDate"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/lblDate"
        android:layout_width="475dp"
        android:layout_height="50dp"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/frame_style"
        android:paddingBottom="8dp"
        android:paddingLeft="13dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:text="@string/text_date"
        android:textSize="9pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblTime"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="71dp"
        android:background="@drawable/frame_style"
        android:paddingBottom="8dp"
        android:paddingLeft="13dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:text="@string/text_time"
        android:textSize="9pt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/lblName"
        app:layout_constraintRight_toRightOf="@+id/lblName"
        app:layout_constraintTop_toBottomOf="@+id/lblName"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btSlectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginStart="102dp"
        android:onClick="selectDate"
        android:text="@string/text_selectd"
        app:layout_constraintBottom_toBottomOf="@+id/lblDate"
        app:layout_constraintLeft_toLeftOf="@+id/lblDate"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="@+id/lblDate"
        android:layout_marginTop="9dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/lblDate"
        app:layout_constraintLeft_toRightOf="@+id/btSlectDate"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="40dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <Spinner
        android:id="@+id/spName"
        android:layout_width="148dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="102dp"
        app:layout_constraintBottom_toBottomOf="@+id/lblName"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/lblName"
        app:layout_constraintTop_toTopOf="@+id/lblName"
        android:layout_marginLeft="102dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp" />

    <Spinner
        android:id="@+id/spTime"
        android:layout_width="98dp"
        android:layout_height="26dp"
        android:entries="@array/ingredients_quantity"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="102dp"
        app:layout_constraintBottom_toBottomOf="@+id/lblTime"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/lblTime"
        app:layout_constraintTop_toTopOf="@+id/lblTime"
        android:layout_marginLeft="102dp"
        app:layout_constraintVertical_bias="0.625" />

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:onClick="shiftInput"
        android:text="@string/text_clear"
        android:textSize="8pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:onClick="toTop"
        android:text="@string/text_2top"
        android:textSize="8pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

</android.support.constraint.ConstraintLayout>
